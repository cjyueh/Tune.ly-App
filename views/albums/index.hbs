{{!-- SEARCH FIELD AND `ADD ALBUM` BUTTON --}}
<div class="sub-menu">
	<form class="nav navbar-nav navbar-form navbar-left" role="search">
		<div class="form-group">
			<input type="text" class="form-control" placeholder="Search">
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
	<ul class="nav navbar-nav navbar-right">
		<li><a href="/albums/new">Add Album</a></li>
	</ul>
</div>

{{!-- FOR EACH ALBUM, MAKE THUMBNAIL --}}
<div class="row index">
  <div class="col-sm-6 col-md-9 col-centered">
  	{{#each albums}}
    <a href="/albums/{{_id}}" class="thumbnail">
    	<div class="alb-thumb">
      	<img src="{{image_url}}" />
      </div>
      <div class="caption alb-thumb">
				<h4 class="album-name">{{album_name}}</h4>
				<h5><span class = "attributes">Artist:</span> {{artist_name}}</h5>
				<h5><span class = "attributes">Release Date:</span> {{release_date}}</h5>
				<h5><span class = "attributes">Genre:</span> {{genre}}</h5>
			</div>
    </a>
    {{/each}}
  </div>
</div>